	{{!< default}}


{{! Entry }}
	<main class="clearfix" role="main" itemscope itemtype="http://schema.org/Article">
		{{#post}}

			{{! Post }}
				<article class="{{post_class}} odd last">
					<div class="container clearfix animate-in" data-anim-type="fade-in-up">
						<h3 class="post-time bm-small"><time pubdate datetime="{{date format='YYYY-MM-DD'}}" itemprop="datePublished">{{date format="DD MMM YYYY"}}</time></h3>
						<h1 class="post-title bm-large" itemprop="name"><a href="{{url}}" target="_self">{{{title}}}</a></h1>
					
						<div class="article-body" itemprop="articleBody">{{content}}</div>

						<hr class="alt bm-large" />

						<div class="one-half bm-remove">
							{{#if tags}}
								<ul class="post-tags">
									{{#foreach tags}}<li><a href="{{url}}" target="_self">{{name}}</a></li>{{/foreach}}
								</ul>
							{{/if}}
						</div>

						<div class="one-half bm-remove last">
							<div class="float-right">
								<span class="social-icon facebook animate-in" data-anim-type="zoom-in" data-anim-delay="300"><a href="http://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" target="_self" title="Share this on Facebook"><i class="fa fa-facebook fa-fw"></i></a></span>
								<span class="social-icon twitter animate-in" data-anim-type="zoom-in" data-anim-delay="400"><a href="https://twitter.com/intent/tweet?text={{@blog.title}}:%20{{title}}%20-%20{{url absolute="true"}}%20" target="_self" title="Share this on Twitter" class="twitter-handle"><i class="fa fa-twitter fa-fw"></i></a></span>
								<span class="social-icon google-plus animate-in" data-anim-type="zoom-in" data-anim-delay="500"><a href="https://plus.google.com/share?url={{url absolute="true"}}" target="_self" title="Share this on Google+"><i class="fa fa-google-plus fa-fw"></i></a></span>
								<span class="social-icon pinterest animate-in" data-anim-type="zoom-in" data-anim-delay="600"><a href="//pinterest.com/pin/create/button/?url={{url absolute="true"}}&amp;media={{@blog.url}}{{@blog.logo}}&amp;description={{excerpt characters="200"}}" target="_self" title="Share this on Pinterest"><i class="fa fa-pinterest fa-fw"></i></a></span>
								<span class="social-icon email animate-in" data-anim-type="zoom-in" data-anim-delay="700"><a href="mailto:?subject={{title}}&amp;body=Hey,%20while%20browsing%20{{@blog.title}}%20I%20found%20a%20great%20article%20that%20I%20thought%20you%20might%20like%20to%20read.%0D%0A%0D%0A{{title}}%0D%0A{{url absolute="true"}}" target="_self" title="Email this to a friend"><i class="fa fa-envelope fa-fw"></i></a></span>
							</div>
						</div>
					</div>
				</article>


			{{! Author }}
				{{#if author}}
					{{#author}}
						<section class="author-mini" itemprop="author" itemscope itemtype="http://schema.org/Person">
							<div class="container bm-medium clearfix animate-in" data-anim-type="bounce-in">
								<h2 class="title bm-large">About the Author</h2>

								{{#if image}}<a href="{{url}}" target="_self" class="author-image"><img src="{{image}}" alt="{{name}} Image" /></a>{{/if}}

								<div class="details">
									<h4 class="bm-remove" itemprop="name"><a href="{{url}}" target="_self">{{name}}</a></h3>

									<p class="bm-small">
										<small>
											{{#if location}}<i class="fa fa-map-marker fa-fw"></i> &nbsp;<a href="https://maps.google.com/maps?q={{location}}" target="_blank">{{location}}</a> &nbsp;&nbsp;{{/if}}<br class="links" />
											{{#if website}}<i class="fa fa-laptop fa-fw"></i> &nbsp;<a href="{{website}}" target="_blank">{{website}}</a>{{/if}}
										</small>
									</p>

									<p class="bm-remove">{{bio}}</p>
								</div>
							</div>
						</section>
					{{/author}}
				{{/if}}


			{{! Comments }}
				<section id="comments">
					<div class="container bm-medium animate-in" data-anim-type="fade-in-up">
						<h2 class="title bm-large">Comments</h2>

						<div class="fb-comments" data-href="{{url absolute="true"}}" data-numposts="5" data-colorscheme="light"></div>
						<div id="disqus_thread"></div>
					</div>
				</section>

		{{/post}}
	</main>