{{! Pagination }}
	<nav class="pagination-container" role="pagination">
		<div class="container bm-medium text-center clearfix">
			<div class="pagination">
				{{#if prev}}<a class="newer-posts" href="{{page_url prev}}"><i class="fa fa-long-arrow-left"></i> Newer Posts</a>{{/if}}
				<span class="page-number">Page {{page}} of {{pages}}</span>
				{{#if next}}<a class="older-posts" href="{{page_url next}}">Older Posts <i class="fa fa-long-arrow-right"></i></a>{{/if}}
			</div>
		</div>
	</nav>