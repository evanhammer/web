{{! Post Loop }}
	{{#foreach posts}}
		<article class="{{post_class}} {{#if @odd}}odd{{else}}even{{/if}}{{#if @first}} first{{/if}}{{#if @last}} last{{/if}}">
			<div class="container bm-medium clearfix animate-in" data-anim-type="bounce-in">
				<div class="featured-icon cursor-pointer"><i class="fa fa-star fa-fw"></i></div>
				<div class="featured-text">Featured</div>

				<h3 class="post-time"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time></h3>
				<h1 class="post-title"><a href="{{url}}" target="_self">{{{title}}}</a></h1>

				<p class="bm-larger">{{excerpt words="125"}}&hellip;</p>

				<div class="clearfix"><a href="{{url}}" target="_self" class="button w-large h-large f-large bm-remove float-right">Read More</a></div>
			</div>
		</article>
	{{/foreach}}